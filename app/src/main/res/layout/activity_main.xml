<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.usjt.rodrigooliveiraviniciusbarbosaintsi3anbua.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_nome"
            android:id="@+id/text_nome"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:id="@+id/editText_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_nome"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/editText_nome"/>

        <TextView
            android:id="@+id/text_interesse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_nome"
            android:layout_marginStart="10dp"
            android:text="@string/text_interesse"/>

        <Spinner
            android:id="@+id/interesse_array"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_interesse"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/interesse_array"
            android:layout_below="@+id/interesse_array"
            android:onClick="sendMessage"
            android:text="@string/button_send" />

    </RelativeLayout>
