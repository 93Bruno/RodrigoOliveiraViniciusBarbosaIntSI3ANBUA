<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    tools:context="br.usjt.rodrigooliveiraviniciusbarbosaintsi3anbua.DisplayMessageActivity">

    <TextView
        android:id="@+id/text_nomeSelecionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text=""/>

    <TextView
        android:id="@+id/text_listaLivrosRotulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_nomeSelecionado"
        android:layout_marginStart="10dp"
        android:text="Eis aqui uma lista de livros:"/>

    <EditText
        android:id="@+id/editText_livro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_listaLivrosRotulo"
        android:ems="10"
        android:inputType="text"
        android:text=""/>

    <EditText
        android:id="@+id/editText_livro2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_livro1"
        android:ems="10"
        android:inputType="text"
        android:text=""/>


</RelativeLayout>